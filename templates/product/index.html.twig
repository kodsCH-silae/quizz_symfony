{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>CreationDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.creationDate ? product.creationDate|date('d-m-Y') : '' }}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">Create new</a>

    <a href="{{ path('product_show_by_days', {'days': 15 }) }}">Show products created before 15 days or more</a>
    <form method="POST" action="{{ path('product_show_by_dynamic_days') }}">
        <input name="nbre" type="number"/>
        <button class="btn btn-success">Show products created before **dynamic** days</button>
    </form>
    <a href="{{ path('product_order')}}">trier la liste</a>
{% endblock %}
